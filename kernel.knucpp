#include <kpi/kpi_kernel.h>

extern "C" __knu_kernel
void adder()
{

  int recv = 0;
  int total = 0;
  int num_data = 0;

  KPI_Recv(&num_data, 1);

  while ( num_data-- > 0 )
  {
    KPI_Recv(&recv, 1);
    total += recv;
		// KPI_Physical_ID() returns IDR contents of tDSP. This field isn't used.
	  KPI_Send_Host(&total, 1, KPI_Physical_ID());
  }

}
